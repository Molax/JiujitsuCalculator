    <![endif]-->


    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <div class="col-md-12 text-center">
                <a href="#"><img src="@ViewBag.Foto" alt="Perfil" class="img-circle"></a>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12 text-center nameuser">
                <a href="#"><h2 class="titleuser">@ViewBag.Fb.name</h2></a>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12 form">
                <div class="form-group">
                    <label class="col-md-4 control-label text-right" for="where">FAIXA:</label>
                    <div class="col-md-4">
                        <select id="faixa" name="where" class="form-control">
                            <option value="0">Selecione sua faixa:</option>
                            <option value="1">Branca</option>
                            <option value="3">Cinza</option>
                            <option value="5">Amarela</option>
                            <option value="7">Laranja</option>
                            <option value="9">Verde</option>
                            <option value="11">Azul</option>
                            <option value="13">Roxa</option>
                            <option value="15">Marrom</option>
                            <option value="17">Preta</option>
                            <option value="19">Vermelha / Preta</option>
                            <option value="21">Vermelha / Branca</option>
                            <option value="23">Vermelha</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12 form">
                <div class="form-group">
                    <label class="col-md-4 control-label text-right" for="where">CATEGORIA:</label>
                    <div class="col-md-4">
                        <select id="categoria" name="where" class="form-control">
                            <option value="0">Selecione sua categoria:</option>
                            <option value="10">Adulto</option>
                            <option value="5">Infantil</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12 form">
                <div class="form-group">
                    <label class="col-md-4 control-label text-right" for="where">TEMPO DE JIU-JITSU:</label>
                    <div class="col-md-4">
                        <select id="tempo" name="where" class="form-control">
                            <option value="0">Selecione seu tempo:</option>
                            <option value="1">< 1 Ano</option>
                            <option value="2">1 a 2 anos</option>
                            <option value="5">2 a 3 anos</option>
                            <option value="7">3 a 4 anos</option>
                            <option value="9">5 a 6 anos</option>
                            <option value="11">6 a 7 anos</option>
                            <option value="13">8 a 9 anos</option>
                            <option value="15">10 anos +</option>

                        </select>
                    </div>
                </div>
            </div>

            <div id="wrapper">

                <form class="form-inline">
                    <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                        <div class="form-group">
                            <select id="faixaCamp" name="where" class="form-control">
                                <option value="0">Selecione sua faixa:</option>
                                <option value="1">Branca</option>
                                <option value="3">Cinza</option>
                                <option value="5">Amarela</option>
                                <option value="7">Laranja</option>
                                <option value="9">Verde</option>
                                <option value="11">Azul</option>
                                <option value="13">Roxa</option>
                                <option value="15">Marrom</option>
                                <option value="17">Preta</option>
                                <option value="19">Vermelha / Preta</option>
                                <option value="21">Vermelha / Branca</option>
                                <option value="23">Vermelha</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                        <div class="form-group">
                            <select id="colocacaoCamp" name="where" class="form-control">
                                <option value="0">Selecione sua colocação:</option>
                                <option value="10">1º Lugar</option>
                                <option value="6">2º Lugar</option>
                                <option value="3">3º Lugar</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                        <div class="form-group">
                            <select id="categoriaCamp" name="where" class="form-control">
                                <option value="0">Selecione sua categoria:</option>
                                <option value="10">Adulto</option>
                                <option value="5">Infantil</option>
                            </select>
                        </div>
                    </div>
                </form>
                <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                    <br>
                </div>
            </div>


            <div id="btn-add" class="col-md-12 col-sm-12 col-xs-12 text-center form-btn">
                <a class="btn btn-warning btn-form" href="#" role="button">Adicionar campeonato</a>
            </div>

            <div class="col-md-12 col-sm-12 col-xs-12 text-center form-btn">
                <a class="btn btn-success btn-calc" href="#" role="button">Calcular</a>
            </div>

            <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                <a href="index.html"><img class="logosmall" src="~/img/meujiujitsu.svg"></a>
            </div>
        </div>
    </div>

</body>
</html>
